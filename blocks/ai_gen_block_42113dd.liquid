{% doc %}
  @prompt
    categories sub header

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-categories-subheader-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 0;
    border-bottom: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
  }

  .ai-categories-subheader__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-categories-subheader__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
    gap: {{ block.settings.item_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-categories-subheader__link-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    text-decoration: none;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
    border-radius: {{ block.settings.link_border_radius }}px;
    transition: all0.3s ease;
    white-space: nowrap;
  }

  .ai-categories-subheader__link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.text_hover_color }};
    background-color: {{ block.settings.link_hover_background }};
  }

  .ai-categories-subheader__link-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.text_color }};
    outline-offset: 2px;
  }

  @media screen and (max-width: 749px) {
    .ai-categories-subheader__nav-{{ ai_gen_id }} {
      justify-content: {{ block.settings.mobile_alignment }};
      gap: {{ block.settings.mobile_item_spacing }}px;
    }

    .ai-categories-subheader__link-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;padding: {{ block.settings.mobile_link_padding }}px {{ block.settings.mobile_link_padding | times: 1.5 }}px;
    }
  }
{% endstyle %}

<div class="ai-categories-subheader-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-categories-subheader__container-{{ ai_gen_id }}">
    <nav class="ai-categories-subheader__nav-{{ ai_gen_id }}" role="navigation" aria-label="Category navigation">
      {% for i in (1..8) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign label_key = 'label_' | append: i
          assign collection = block.settings[collection_key]
          assign label = block.settings[label_key]
        %}

        {% if collection != blank %}
          <a 
            href="{{ collection.url }}" 
            class="ai-categories-subheader__link-{{ ai_gen_id }}"
          >
            {% if label != blank %}
              {{ label }}
            {% else %}
              {{ collection.title }}
            {% endif %}
          </a>
        {% endif %}
      {% endfor %}
    </nav>
  </div>
</div>

