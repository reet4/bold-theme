{% doc %}
  @prompt
    A HOLOGRAPHIC PRODUCT CARD

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-holographic-card-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ block.settings.card_width }}px;
    margin: 0 auto;
    perspective: 1000px;
  }

  .ai-holographic-card__inner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    background: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.padding }}px;
    overflow: hidden;
    transform-style: preserve-3d;transition: transform 0.3s ease;
  }

  .ai-holographic-card__inner-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      45deg,
      transparent 30%,
      {{ block.settings.hologram_color_1 }}2250%,
      {{ block.settings.hologram_color_2 }}22 60%,
      {{ block.settings.hologram_color_3 }}22 70%,
      transparent 80%
    );
    background-size: 300% 300%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 1;
  }

  .ai-holographic-card-{{ ai_gen_id }}:hover .ai-holographic-card__inner-{{ ai_gen_id }}::before {
    opacity: {{ block.settings.hologram_opacity | divided_by: 100.0 }};
    animation: ai-holographic-shimmer-{{ ai_gen_id }} 2s ease-in-out infinite;
  }

  .ai-holographic-card-{{ ai_gen_id }}:hover .ai-holographic-card__inner-{{ ai_gen_id }} {
    transform: rotateY({{ block.settings.tilt_intensity }}deg) rotateX({{ block.settings.tilt_intensity | times: 0.5 }}deg);
  }

  @keyframes ai-holographic-shimmer-{{ ai_gen_id }} {
    0% {
      background-position: -100% -100%;
    }
    50% {
      background-position: 100% 100%;
    }
    100% {
      background-position: -100% -100%;
    }
  }

  .ai-holographic-card__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .ai-holographic-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-holographic-card__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-holographic-card-{{ ai_gen_id }}:hover .ai-holographic-card__image-{{ ai_gen_id }} {
    transform: scale({{ block.settings.image_scale | divided_by: 100.0 }});
  }

  .ai-holographic-card__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-holographic-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-holographic-card__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-holographic-card__info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-holographic-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-holographic-card__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    line-height: 1.4;}

  .ai-holographic-card__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 700;
    color: {{ block.settings.price_color }};
  }

  .ai-holographic-card__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-holographic-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};transform: translateY(-2px);
  }

  .ai-holographic-card__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 12px;
    font-weight: 600;
    z-index: 3;
  }

  @media screen and (max-width: 749px) {
    .ai-holographic-card-{{ ai_gen_id }} {
      max-width: 100%;
    }
    
    .ai-holographic-card__inner-{{ ai_gen_id }} {
      padding: {{ block.settings.padding | times: 0.8 }}px;
    }
    .ai-holographic-card-{{ ai_gen_id }}:hover .ai-holographic-card__inner-{{ ai_gen_id }} {
      transform: rotateY({{ block.settings.tilt_intensity | times: 0.5 }}deg) rotateX({{ block.settings.tilt_intensity | times: 0.25 }}deg);
    }
  }
{% endstyle %}<holographic-card-{{ ai_gen_id }}
  class="ai-holographic-card-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-holographic-card__inner-{{ ai_gen_id }}">
    {% if block.settings.show_badge and block.settings.badge_text != blank %}
      <div class="ai-holographic-card__badge-{{ ai_gen_id }}">
        {{ block.settings.badge_text }}
