{% doc %}
  @prompt
    large bold text filled with an image

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-text-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.text_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-image-text__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-image-text__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-image-text__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-image-text__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    z-index: 2;
  }

  .ai-image-text__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;font-size: {{ block.settings.font_size }}px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: {{ block.settings.letter_spacing }}px;
    line-height:0.9;
    text-align: center;
    background: url('{{ block.settings.fill_image | image_url: width: 1200}}') center/cover;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    color: transparent;
    padding: 20px;
    max-width: 90%;
  }

  .ai-image-text__content-fallback-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    font-size: {{ block.settings.font_size }}px;
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: {{ block.settings.letter_spacing }}px;
    line-height: 0.9;
    text-align: center;
    color: {{ block.settings.fallback_color }};
    padding: 20px;
    max-width: 90%;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
  }

  @supports not (background-clip: text) {
    .ai-image-text__content-{{ ai_gen_id }} {
      display: none;
    }
    .ai-image-text__content-fallback-{{ ai_gen_id }} {
      display: block;
    }
  }

  @supports (background-clip: text) {
    .ai-image-text__content-fallback-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-image-text-{{ ai_gen_id }} {
      height: {{ block.settings.text_height | times: 0.7 }}px;
    }

    .ai-image-text__content-{{ ai_gen_id }},
    .ai-image-text__content-fallback-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.6 }}px;
      letter-spacing: {{ block.settings.letter_spacing | times: 0.5 }}px;
    }
  }
{% endstyle %}<div
  class="ai-image-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-image-text__background-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
    >
  {% else %}
    <div class="ai-image-text__placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}<div class="ai-image-text__empty-state-{{ ai_gen_id }}">
        Add a background image
      </div>
    </div>
  {% endif %}

  {% if block.settings.text != blank %}
    {% if block.settings.fill_image %}
      <h1 class="ai-image-text__content-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </h1>
    {% endif %}
    <h1 class="ai-image-text__content-fallback-{{ ai_gen_id }}">
      {{ block.settings.text }}
    </h1>
  {% else %}
    <h1 class="ai-image-text__content-fallback-{{ ai_gen_id }}">
      Your bold text here
    </h1>
  {% endif %}
</div>

{% schema %}
{
  "name": "Image filled text",
  "settings": [
    {
      "type": "header",
      "content": "Text content"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text",
      "default": "BOLD TEXT"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 40,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Font size",
      "default": 120
    },
    {
      "type": "range",
      "id": "letter_spacing",
      "min": 0,
      "max": 20,
      "step": 1,
      "unit": "px",
      "label": "Letter spacing",
      "default": 5
    },
    {
      "type": "range",
      "id": "text_height",
      "min": 200,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Text area height",
      "default": 400
    },
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "fill_image",
      "label": "Text fill image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "header",
      "content": "Fallback styling"
    },
    {
      "type": "color",
      "id": "fallback_color",
      "label": "Fallback text color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Image filled text"
    }
  ],
  "tag": null
}
{% endschema %}