{% doc %}
  @prompt
    write a custom liquid code to make a header to show collections, i just text buttons fully customiable, add options to customize the section and all the buttons. inside

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-collection-header__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-header__title-{{ ai_gen_id }} {
    text-align: {{ block.settings.title_alignment }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    text-transform: {{ block.settings.title_case }};
  }

  .ai-collection-header__nav-{{ ai_gen_id }} {
    display: flex;
    justify-content: {{ block.settings.nav_alignment }};
    align-items: center;
    gap: {{ block.settings.button_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-collection-header__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-transform: {{ block.settings.button_text_case }};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-collection-header__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY({{ block.settings.button_hover_lift }}px);
  }

  .ai-collection-header__button-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.button_text_color }};
    outline-offset: 2px;
  }

  @media screen and (max-width: 768px) {
    .ai-collection-header__nav-{{ ai_gen_id }} {
      justify-content: {{ block.settings.nav_alignment_mobile }};
      gap: {{ block.settings.button_spacing_mobile }}px;
    }

    .ai-collection-header__button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical_mobile }}px {{ block.settings.button_padding_horizontal_mobile }}px;
      font-size: {{ block.settings.button_font_size_mobile }}px;
    }

    .ai-collection-header__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
      text-align: {{ block.settings.title_alignment_mobile }};
    }
  }

  .ai-collection-header__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }
{% endstyle %}

<div class="ai-collection-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-header__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank %}
      <h2 class="ai-collection-header__title-{{ ai_gen_id }}">
        {{ block.settings.title }}
      </h2>
    {% endif %}

    {% assign has_collections = false %}
    {% for i in (1..8) %}
      {% assign collection_key = 'collection_' | append: i %}
      {% assign collection = block.settings[collection_key] %}
      {% if collection != blank %}
        {% assign has_collections = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_collections %}
      <nav class="ai-collection-header__nav-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% assign collection_key = 'collection_' | append: i %}
          {% assign custom_label_key = 'collection_' | append: i | append: '_label' %}
          {% assign collection = block.settings[collection_key] %}
          {% assign custom_label = block.settings[custom_label_key] %}
          
          {% if collection != blank %}
            <a 
              href="{{ collection.url }}" 
              class="ai-collection-header__button-{{ ai_gen_id }}"
            >
              {% if custom_label != blank %}
                {{ custom_label }}
              {% else %}
                {{ collection.title }}
              {% endif %}
            </a>
          {% endif %}
        {% endfor %}
      </nav>
    {% else %}
      <div class="ai-collection-header__empty-state-{{ ai_gen_id }}">
        Select collections to display navigation buttons
      </div>
    {% endif %}
  </div>
</div>

